
// Change the string to upper case.
function loanNumberUpperCase(CtrlId) {
    if (CtrlId.value != "") {
        CtrlId.value = CtrlId.value.toUpperCase();
    }
}

// add the 0's to left hand side
function leftPadCertificate(s) { 
    var newcert;
    if (s.length == 8) {
        newcert = s;
    }
    else {
        while (s.length < 8) {
            s = "0" + s;
        }
        newcert = s;
    }
    return newcert;
}


